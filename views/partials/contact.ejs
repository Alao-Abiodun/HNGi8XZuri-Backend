<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form action="mailing" method="POST" id="contact-form" enctype="multipart/form-data">
            <div class="form-group my-2">
            <label for="name" class="form-label fw-bolder">Name</label>
            <input class="form-control" type="text" id="name" name="name" class="input1" required>
            </div>
            <div class="form-group my-2">
            <label for="email" class="form-label fw-bolder">Email</label>
            <input class="form-control" type="email" id="email" name="email" class="input2" required>
            </div>
            <div class="form-group my-2">
            <label for="message" class="form-label fw-bolder">Message</label>
            <textarea class="form-control" style="resize: none;" id="message" name="message" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit" value="submit">Send</button>
            <div class="message">Email Sent Successfully</div>
        </form>
    </div>
  </div>